!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title Manage My Keys
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    :css
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    = stylesheet_link_tag "application", :media => "all"
    = csrf_meta_tags
    
    / HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      <script src="../assets/js/html5shiv.js"></script>
    / Fav and touch icons
    -# %link{:href => "../assets/ico/apple-touch-icon-144-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "144x144"}/
    -# %link{:href => "../assets/ico/apple-touch-icon-114-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "114x114"}/
    -# %link{:href => "../assets/ico/apple-touch-icon-72-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "72x72"}/
    -# %link{:href => "../assets/ico/apple-touch-icon-57-precomposed.png", :rel => "apple-touch-icon-precomposed"}/
    -# %link{:href => "../assets/ico/favicon.png", :rel => "shortcut icon"}/
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Manage My Keys", root_path, :class => 'brand'
          .nav-collapse.collapse
            %ul.nav
              %li.active
                %a{:href => "#"} Home
              %li
                %a{:href => "#about"} About
              %li
                %a{:href => "#contact"} Contact
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Dropdown
                  %b.caret
                %ul.dropdown-menu
                  %li
                    %a{:href => "#"} Action
                  %li
                    %a{:href => "#"} Another action
                  %li
                    %a{:href => "#"} Something else here
                  %li.divider
                  %li.nav-header Nav header
                  %li
                    %a{:href => "#"} Separated link
                  %li
                    %a{:href => "#"} One more separated link
            - if current_user
              = link_to "Sign Out", destroy_user_session_path, class: 'btn pull-right', method: :delete
            - else
              %form.navbar-form.pull-right
                %input.span2{:placeholder => "Email", :type => "text"}/
                %input.span2{:placeholder => "Password", :type => "password"}/
                %button.btn{:type => "submit"} Sign in
          / /.nav-collapse
    .container
      %p.notice= notice
      %p.alert= alert
      = yield
      %hr/
      %footer
        %p Â© Company 2013
    / /container
    /
      Le javascript
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
